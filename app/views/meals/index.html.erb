<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Diet</th>
      <th>Name</th>
      <th>Time at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.diet_id %></td>
        <td><%= meal.name %></td>
        <td><%= meal.time_at %></td>
        <td><%= link_to 'Show', [meal.diet, meal] %></td>
        <td><%= link_to 'Edit', edit_diet_meal_path(meal.diet, meal) %></td>
        <td><%= link_to 'Destroy', [meal.diet, meal], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

